{
  "$schema": "https://json.schemastore.org/tsconfig",

  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "outDir": "dist",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "baseUrl": "./",
    "paths": {
      "@App/*": [
        "src/*"
      ]
    },
    "strict": true,
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "/node_modules",
    "**/.*/",
    "/dist"
  ],
  "ts-node": {
    "esm": true, // «———— enabling ESM for ts-node
  },
}